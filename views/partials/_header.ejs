<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-info">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (!user) { %>
    <div class="login-link mr-2">
      <a class="nav-item nav-link btn btn-outline-light" href="/login">Login</a>
    </div>
    <div class="register-link">
      <a class="nav-item nav-link btn btn-outline-light" href="/register">Register</a>
    </div>
    <div>
    <% } else { %>
    <div class="login-info">
      <span class="navbar-text mr-3">
        Logged in as: <%= user.email %>
      </span>
    </div>
    <div class="logout-button">
      <form method="POST" action="/logout" class="form-inline">
        <button type="submit" class="btn btn-outline-light my-2 my-sm-0">Logout</button>
      </form>
      <% } %>
    </div>
  </nav>
</header>